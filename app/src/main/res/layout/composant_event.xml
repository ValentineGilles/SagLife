<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEvent"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:cardCornerRadius="16dp"
        android:layout_margin="8dp"
        android:elevation="16dp">
        <ImageView
            android:id="@+id/imageEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Event"
            android:scaleType="fitXY"
            android:src="@drawable/event" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardEvent"
        android:layout_margin="24dp"
        android:translationZ="2dp"
        android:background="@drawable/layout_bg"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/dateEvent"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="24 Sept."
            android:textSize="30sp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Party Barbie"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_access_time_24"
                    app:tint="@color/material_dynamic_neutral80" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/horraireEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17h - 21h"
                    android:textColor="@color/material_dynamic_neutral80"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_gravity="center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_add_circle_24"
            android:scaleType="fitXY"
            android:background="@drawable/roundcorner"
            />

    </LinearLayout>


</RelativeLayout>

